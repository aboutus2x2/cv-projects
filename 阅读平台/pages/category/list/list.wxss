/* pages/category/list/list.wxss */

.container {
  padding: 0 32rpx;
}

.words {
  padding: 64rpx;
  font-size: 36rpx;
  position: relative;
}

.icon-quotesleft {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  font-size: 128rpx;
  opacity: 0.2;
}

.author-row {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.author-row>text {
  margin-left: 16rpx;
}

.head-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx 32rpx;
  padding: 32rpx 0;
}

.box-3x4>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}