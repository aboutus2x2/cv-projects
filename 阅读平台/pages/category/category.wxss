/* pages/category/category.wxss */
page {
  width: calc(100% - 64rpx);
  padding: 32rpx;
  padding-top: 0;
}

.head {
  position: sticky;
  top: 0;
  background-color: #fff;
}

.search {
  display: flex;
  padding: 32rpx 0;
}

.search-bar {
  flex-grow: 1;
  display: flex;
  background-color: #cccccc;
  border-radius: 16rpx;
  color: #6c6f72;
  justify-content: center;
  align-items: center;
  margin-right: 32rpx;
}

.icon-scan {
  font-size: 64rpx;
}

.imgs {
  display: flex;
  justify-content: space-between;
}

.img {
  width: calc((100% - 32rpx) * 0.5);
  height: 200rpx;
  color: #fff;
  font-weight: bolder;
  position: relative;
}

.img>image {
  border-radius: 16rpx;
  width: 100%;
  height: 100%;
}

.img>view {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.br {
  display: flex;
  padding: 16rpx 0;
}

.br>text {
  padding: 0 16rpx;
}

.br::before,
.br::after {
  content: '';
  display: block;
  border-top: 1rpx dashed #000;
  flex-grow: 1;
  position: relative;
  top: 1ex;
}

.nav-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

.nav-item {
  position: relative;
}

.nav-item>image,
.nav-item>text {
  position: absolute;
  top: 0;
  left: 0;
}

.nav-item::before {
  content: '';
  display: block;
  padding-top: 100%;
}

.nav-item>image {
  width: 100%;
  height: 100%;
}