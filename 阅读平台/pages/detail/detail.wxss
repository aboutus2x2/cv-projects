/* pages/detail/detail.wxss */
.book-info {
  display: grid;
  grid-template-columns: 1fr;
  row-gap: 32rpx;
  padding: 64rpx 0 32rpx 0;
}

.row1 {
  display: flex;
  justify-content: center;
}

.box-3x4 {
  width: 250rpx;
}

.box-3x4>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.row2 {
  font-size: 40rpx;
  text-align: center;
  font-weight: bolder;
}

.row3 {
  text-align: center;
  color: #2ab6b0;
  font-size: 28rpx;
}

.row4 {
  text-align: center;
  color: #c8c8c8;
  font-size: 28rpx;
}

.icon-arrow-right {
  position: relative;
  top: 4rpx;
}

.btns {
  display: flex;
  border-bottom: 3rpx solid #e1e1e1;
}

.btn {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 16rpx 32rpx 16rpx;
  color: #e1e1e1;
  position: relative;
}

.title.active {
  color: #000;
  font-weight: bolder;
}

.line {
  display: none;
  width: 100%;
  height: 10rpx;
  background-color: #000;
  position: absolute;
  bottom: -5rpx;
  left: 0;
}

.title.active>.line {
  display: block;
}

.bottom {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}

.placeholder {
  background-color: #fff;
}

.b-btns {
  display: flex;
}

.b-btns>view {
  width: 50%;
  padding: 32rpx;
  text-align: center;
  font-weight: bolder;
}

.b-btns>view:nth-child(2) {
  background-color: #ccb483;
  color: #fff;
}

.dir {
  padding: 32rpx;
  border-bottom: 1rpx solid #e1e1e1;
}