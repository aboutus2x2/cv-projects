/* pages/desk/desk.wxss */
page {
  /* 高宽比 */
  --rate: 1.33;
}

.icon-all-fill {
  font-size: 64rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}

.list {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: #fff;

  transition: all 1s;
  transform: scale(0);
  opacity: 0;
}

.btns {
  box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.1);
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
}

.btn {
  display: inline-block;
  border: 1rpx solid rgba(0, 0, 0, 0.199);
  padding: 8rpx 16rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.btn:active {
  background-color: rgb(216, 216, 216);
}

.book-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx 32rpx;
  padding: 32rpx;
}

swiper {
  width: 300rpx;
  height: calc(var(--rate) * 300rpx);
}

.swiper-container {
  display: flex;
  justify-content: center;
  padding-top: 128rpx;
}

.dots {
  display: flex;
  justify-content: center;
}

.dots>view {
  width: 48rpx;
  height: 18rpx;
  background-color: #cecece;
}

.dots>.active {
  background-color: #000;
}

.box-3x4>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}