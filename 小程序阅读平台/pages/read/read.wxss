page {
  background-color: #f6f6f6;
}

.news-card {
  background-color: #fff;
  padding: 38rpx;
  display: grid;
  grid-template-columns: 1fr;
  row-gap: 19rpx;
  margin-top: 19rpx;
}

.row1 {
  display: flex;
  align-items: center;
}

.head-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 38rpx;
}

.author {
  font-size: 33rpx;
}

.big-img {
  width: 100%;
  height: 333rpx;
}

.hot {
  background-color: #bc7878;
  color: #fff;
  font-size: 28rpx;
  padding: 4.7rpx 19rpx;
  border-radius: 28rpx;
  margin-right: 9.5rpx;
  position: relative;
  top: -2.4rpx;
}

.info {
  color: #a4a4a4;
  font-size: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.row2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #cbc6c6;
}

.title {
  font-size: 38rpx;
}